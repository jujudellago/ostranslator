<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>

      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:enabled) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.id, user_account_path(current_user,account) %></td>
        <td><%= account.name %></td>

        <td><%= account.user.full_name %></td>
        <td><%= account.enabled %></td>

        <td><%=l account.created_at %></td>
        <td>


          <div class="dropdown">
             <button class="btn btn-default  btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
               Show
             <span class="caret"></span>
           </button>
 <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
   <%= render :partial=>'accounts/account_nav_elems',:locals=>{:account=>account}%>

                  </ul>
        </div>
      </td>
      <td>
          <%#= link_to t('.show', :default => t("helpers.links.show")),
                      [current_user,account] , :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                       edit_user_account_path(current_user,account), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      [current_user,account],
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
             new_user_account_path(current_user),
            :class => 'btn btn-primary' %>
