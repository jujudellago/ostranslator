<%= form_for [current_user,@account], :html => { :class => "form-horizontal account" } do |f| %>


  <% if @account.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :api_key, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :api_key, :class => 'form-control' %>
    </div>
    <%=f.error_span(:api_key) %>
  </div>
  <div class="form-group">
    <%= f.label :api_secret, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :api_secret, :class => 'form-control' %>
    </div>
    <%=f.error_span(:api_secret) %>
  </div>

  <div class="form-group">
    <%= f.label :enabled, :class => 'control-label col-sm-2' %>
    <div class="col-sm-1">
      <%= f.check_box :enabled, :class => 'form-control' %>
    </div>
    <%=f.error_span(:enabled) %>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :comments, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comments) %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_accounts_path(current_user), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
