<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= render :partial=>'accounts/account_nav',:locals=>{:account=>@account}%>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @account.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:api_key) %>:</strong></dt>
  <dd><%= @account.api_key.dup.tap { |p| p[1...31] = "******************************" }  %>
    <!--<br /><%=@account.encrypted_api_key%>--></dd>
  <dt><strong><%= model_class.human_attribute_name(:api_secret) %>:</strong></dt>
  <dd><%= @account.api_secret.dup.tap { |p| p[1...31] = "******************************" } %>


<!--<br /><%=@account.encrypted_api_secret%>--> </dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @account.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @account.enabled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @account.comments %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_accounts_path(current_user), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_account_path(current_user,@account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_account_path(current_user,@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
