<div class="page-header">
  <h1>Actions</h1>
</div>
<%= render :partial=>'accounts/account_nav',:locals=>{:account=>@account}%>
<%#=@client.get("account/getbalances").inspect%>


<%

fields=["Date","Type", "Status", "Market", "Quantity",  "UUID", "Response" ] %>
<table class="table table-striped table-bordered data_table">
<thead>
  <%fields.each do |h|%>
    <th><%=h%></th>
  <%end%>
</thead>
<tbody>

<% 

if @actions
  @actions.each do |action|	
	%>
<tr>
	<td><%=action.created_at.to_s(:long)%></td>
  <td><%=action.action_type%></td>
  <td><%=action.status%></td>
  <td><%=action.market%></td>
  <td><%=action.quantity%></td>
  <td>
	
	<%- 
		#if false
		unless action.uuid.nil? 
			if action.uuid.match(/\[/)
		-%>
			<%- uuids=JSON.parse(action.uuid) -%>
			<%=uuids.join("<br />").html_safe %>
			<%- else -%>
			<%= action.uuid %>	
			<%- end -%>
	<%- end -%>	
	</td>
  <td>
	<%#= action.response["uuid"].inspect %>
	<%- 
	if false
		action.response["uuid"].is_a?(String) 
		 uuids=JSON.parse(action.response["uuid"]) 
		
	-%>
	uuid:<%= uuids.join("<br />").html_safe %><br />
	<%- end -%>
	status:<%= action.response["status"].to_s %><br />
	message:<%= action.response["message"] %>
	
	</td>

<%end%>
</tr>
<%end%>
</tbody>
</table>
